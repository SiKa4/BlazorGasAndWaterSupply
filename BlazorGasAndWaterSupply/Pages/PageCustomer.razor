@page "/pagecustomer"
@using BlazorGasAndWaterSupply.Data
@inject SingletonServices singleton
@inject NavigationManager NavigationManager

<div class="container">
  <div class="row">
    <div class="col-9"><button type="button" class="btn btn-success" @onclick="() => OnClickButton()">Add new project</button></div>
      </div>
</div>

<h3 class="text-center">Projects Table</h3>
@if (singleton.user.Projects == null)
{
    <p>Uploading...</p>
}
else
{
    <p class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">
        <table class="table table-bordered">
            <thead class="alert-dark">
                <tr>
                    <th>Name</th>
                    <th>Size</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in singleton.user.Projects)
                {
                    <tr @onclick="() => OnClickTr(project)">
                        <td>@project.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </p>
}
@code{
    private void OnClickTr(Project project)
    {
        
    }

    private void OnClickButton()
    {
        NavigationManager.NavigateTo("/pagecreateproject");
    }
}
